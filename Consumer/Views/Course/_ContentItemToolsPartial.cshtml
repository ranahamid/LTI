@model List<Consumer.Models.ContentItemToolViewModel>

@foreach (var item in Model)
{
    <text>| </text>
    @Html.ActionLink(item.Name, "Launch", "ContentItemTool", 
    new
    {
        item.ContentItemToolId, 
        item.CourseId, 
        returnUrl = @Request == null ? null : Request.Url == null ? null : Request.Url.AbsoluteUri
    }, 
    new { @class = "button", title = item.Description })
}